{
  "openapi": "3.0.0",
  "info": {
    "title": "Ureshii RestFul API",
    "description": "Projects belajar API by Parhan",
    "version": "1.0"
  },
  "paths": {
    "/api/ai/{engine}": {
      "get": {
        "summary": "Menghasilkan teks menggunakan AI",
        "description": "Endpoint ini menghasilkan teks berdasarkan input pengguna menggunakan berbagai mesin AI.",
        "parameters": [
          {
            "name": "engine",
            "in": "path",
            "required": true,
            "description": "Jenis mesin AI yang ingin digunakan (gemini atau blackbox)",
            "schema": {
              "type": "string",
              "enum": ["gemini", "blackbox"]
            }
          },
          {
            "name": "text",
            "in": "query",
            "required": true,
            "description": "Teks masukan yang akan diolah oleh AI.",
            "schema": {
              "type": "string",
              "example": "Tulis sebuah puisi tentang keindahan alam"
            }
          },
          {
            "name": "logic",
            "in": "query",
            "required": false,
            "description": "Instruksi atau logika khusus untuk menghasilkan respons.",
            "schema": {
              "type": "string",
              "example": "Gunakan gaya bahasa puitis"
            }
          },
          {
            "name": "model",
            "in": "query",
            "required": false,
            "description": "Model AI spesifik yang ingin digunakan (opsional, tergantung jenis AI)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response from AI engine"
          },
          "400": {
            "description": "Invalid engine or missing text parameter"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/data": {
      "get": {
        "summary": "Get data from database",
        "description": "Khusus Parhan",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],                
        "parameters": [
          {
            "in": "query",
            "name": "key",
            "schema": {
              "type": "string"
            },
            "description": "API key"
          },
          {
            "in": "query",
            "name": "type",
            "schema": {
              "type": "string"
            },
            "description": "Type of data (donorData, dataAkun, etc.)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful data retrieval"
          },
          "400": {
            "description": "Invalid data type"
          },
          "403": {
            "description": "Invalid API key"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "securitySchemes": {
    "ApiKeyAuth": {
      "type": "apiKey",
      "in": "query",
      "name": "key"
    }
  }
}
